# Flask Configuration
SECRET_KEY=change-this-secret-key-in-production
FLASK_ENV=production

# Base Path (для доступа через /telemost-bitrix)
BASE_PATH=/telemost-bitrix
SCRIPT_NAME=/telemost-bitrix

# Bitrix24 Configuration
BITRIX24_CLIENT_ID=your_bitrix24_client_id
BITRIX24_CLIENT_SECRET=your_bitrix24_client_secret
BITRIX24_WEBHOOK_URL=https://your-portal.bitrix24.ru/rest/1/webhook_code/

# Yandex Telemost Configuration
YANDEX_CLIENT_ID=your_yandex_client_id
YANDEX_CLIENT_SECRET=your_yandex_client_secret
YANDEX_REDIRECT_URI=https://it.company.ru/telemost-bitrix/auth/yandex/callback
YANDEX_OAUTH_TOKEN=your_yandex_oauth_token

# Logging
LOGGING_LEVEL=INFO
